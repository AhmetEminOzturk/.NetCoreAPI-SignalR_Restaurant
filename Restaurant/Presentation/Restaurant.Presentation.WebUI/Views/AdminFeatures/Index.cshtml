@model List<GenericFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayouts/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">One Cikanlar Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">One Cikanlar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							One Cikanlar ile ilgili islemleri asagidan gerceklestirebilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Baslik 1</th>
									<th scope="col">Baslik 2</th>
									<th scope="col">Baslik 3</th>
									<th scope="col">Aciklama 1</th>
									<th scope="col">Aciklama 2</th>
									<th scope="col">Aciklama 3</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/AdminFeatures/Update/@item.Id" class="btn btn-success">Guncelle</a></td>
										<td><a href="/AdminFeatures/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/AdminFeatures/Create/" class="btn btn-primary">Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
