@model List<GenericCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayouts/Index.cshtml";
}

<h1>Index</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili islemleri asagidan gerceklestirebilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adi</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Name</td>
										<td>@item.Status</td>
										<td><a href="/AdminCategories/Update/@item.Id" class="btn btn-success">Guncelle</a></td>
										<td><a href="/AdminCategories/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/AdminCategories/Create/" class="btn btn-primary">Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>